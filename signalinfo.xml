<?xml version="1.0" encoding="UTF-8"?>
<project name="signalinfo" default="all">


    <property file="signalinfo.properties" />
    <!-- Uncomment the following property if no tests compilation is needed -->
    <!--
    <property name="skip.tests" value="true"/>
     -->

    <!-- Compiler options -->

    <property name="compiler.debug" value="on" />
    <property name="compiler.generate.no.warnings" value="off" />
    <property name="compiler.args" value="" />
    <property name="compiler.max.memory" value="128m" />
    <patternset id="ignored.files">
        <exclude name="**/CVS/**" />
        <exclude name="**/SCCS/**" />
        <exclude name="**/RCS/**" />
        <exclude name="**/rcs/**" />
        <exclude name="**/.DS_Store/**" />
        <exclude name="**/.svn/**" />
        <exclude name="**/.pyc/**" />
        <exclude name="**/.pyo/**" />
        <exclude name="**/*.pyc/**" />
        <exclude name="**/*.pyo/**" />
        <exclude name="**/.git/**" />
        <exclude name="**/*.hprof/**" />
        <exclude name="**/_svn/**" />
        <exclude name="**/.hg/**" />
        <exclude name="**/*.lib/**" />
        <exclude name="**/*~/**" />
        <exclude name="**/vssver.scc/**" />
        <exclude name="**/vssver2.scc/**" />
        <exclude name="**/__pycache__/**" />
        <exclude name="**/.bundle/**" />
        <exclude name="**/*.o/**" />
        <exclude name="**/*.obj/**" />
        <exclude name="**/*.rbc/**" />
    </patternset>
    <patternset id="compiler.excluded">
        <exclude name="${basedir}/gen/**" />
    </patternset>
    <patternset id="library.patterns">
        <include name="*.jar" />
        <include name="*.war" />
        <include name="*.ear" />
        <include name="*.apk" />
        <include name="*.zip" />
        <include name="*.swc" />
        <include name="*.ane" />
        <include name="*.egg" />
    </patternset>
    <patternset id="compiler.resources">
        <include name="**/?*.properties" />
        <include name="**/?*.xml" />
        <include name="**/?*.gif" />
        <include name="**/?*.png" />
        <include name="**/?*.jpeg" />
        <include name="**/?*.jpg" />
        <include name="**/?*.html" />
        <include name="**/?*.dtd" />
        <include name="**/?*.tld" />
        <include name="**/?*.ftl" />
    </patternset>

    <!-- JDK definitions -->

    <property name="jdk.bin.android_4.0.3_platform_empty"
        value="${jdk.home.android_4.0.3_platform_empty}/../../Java/jdk1.6.0_32/bin" />
    <path id="jdk.classpath.android_4.0.3_platform_empty">
        <fileset dir="${jdk.home.android_4.0.3_platform_empty}">
            <include name="platforms/android-15/android.jar" />
            <include name="platforms/android-15/data/res" />
            <include name="tools/support/annotations.jar" />
        </fileset>
    </path>

    <property name="project.jdk.home"
        value="${jdk.home.android_4.0.3_platform_empty}" />
    <property name="project.jdk.bin"
        value="${jdk.bin.android_4.0.3_platform_empty}" />
    <property name="project.jdk.classpath"
        value="jdk.classpath.android_4.0.3_platform_empty" />


    <!-- Project Libraries -->

    <!-- Global Libraries -->
    <!-- Register Custom Compiler Taskdefs -->
    <property name="javac2.home" value="${idea.home}/lib" />
    <path id="javac2.classpath">
        <pathelement location="${javac2.home}/javac2.jar" />
        <pathelement location="${javac2.home}/jdom.jar" />
        <pathelement location="${javac2.home}/asm4-all.jar" />
        <pathelement location="${javac2.home}/jgoodies-forms.jar" />
    </path>
    <target name="register.custom.compilers">
        <taskdef name="javac2" classname="com.intellij.ant.Javac2"
            classpathref="javac2.classpath" />
        <taskdef name="instrumentIdeaExtensions"
            classname="com.intellij.ant.InstrumentIdeaExtensions"
            classpathref="javac2.classpath" />
    </target>

    <!-- Modules -->

    <import file="${basedir}/module_signalinfo.xml" />

    <target name="init" description="Build initialization">
        <!-- Perform any build initialization in this target -->
    </target>

    <target name="clean" depends="clean.module.signalinfo"
        description="cleanup all" />

    <target name="build.modules"
        depends="init, clean, compile.module.signalinfo"
        description="build all modules" />

    <target name="all" depends="build.modules" description="build all" />
</project>